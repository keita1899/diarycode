<header class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 shadow-sm z-50">
  <div class="max-w-6xl mx-auto px-4 flex justify-between items-center h-16">
    <!-- Logo -->
    <div>
      <%= link_to root_path, class: "text-blue-600 text-2xl font-bold hover:text-blue-700 transition-colors" do %>
        DailyCode
      <% end %>
    </div>
    
    <!-- Navigation buttons -->
    <div class="flex items-center space-x-2 sm:space-x-4">
      <% if user_signed_in? %>
        <!-- カレンダーボタン（常に表示） -->
        <%= link_to calendar_path, class: "text-gray-700 hover:text-gray-900 px-2 py-2 sm:px-4 rounded transition-colors flex items-center space-x-1" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="hidden sm:inline">カレンダー</span>
        <% end %>

        <!-- テンプレートボタン（デスクトップのみ表示） -->
        <%= link_to templates_path, class: "hidden md:flex text-gray-700 hover:text-gray-900 px-4 py-2 rounded transition-colors items-center space-x-1" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span>テンプレート</span>
        <% end %>

        <!-- ユーザーメニュー（ドロップダウン） -->
        <div class="relative" data-dropdown>
          <button class="text-gray-700 hover:text-gray-900 px-2 py-2 sm:px-4 rounded transition-colors flex items-center space-x-1" data-dropdown-toggle
          aria-expanded="false"
          aria-haspopup="true"
          aria-label="ユーザーメニューを開く">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="hidden sm:inline text-sm truncate max-w-32">
              <%= current_user.email.split('@').first %>
            </span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <!-- ドロップダウンメニュー -->
          <div class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-lg shadow-lg py-1 hidden" 
              data-dropdown-menu
              role="menu"
              aria-label="ユーザーメニュー">
            <!-- ユーザー情報 -->
            <div class="px-4 py-2 text-sm text-gray-600 border-b border-gray-100">
              <div class="font-medium truncate"><%= current_user.email %></div>
            </div>
            
            <!-- テンプレート（モバイル・タブレット用） -->
            <%= link_to templates_path, class: "md:hidden flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              テンプレート
            <% end %>
            
            <!-- アカウント設定 -->
            <%= link_to edit_user_registration_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              アカウント設定
            <% end %>
            
            <!-- ログアウト -->
            <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors border-0 bg-transparent" do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              ログアウト
            <% end %>
          </div>
        </div>
      <% else %>
        <%= link_to "ログイン", new_user_session_path,
            class: "text-gray-700 hover:text-gray-900 px-4 py-2 rounded transition-colors" %>
        <%= link_to "新規登録", new_user_registration_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded shadow transition-colors" %>
      <% end %>
    </div>
  </div>
</header> 