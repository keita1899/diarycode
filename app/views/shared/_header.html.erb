<header class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 shadow-sm z-50">
  <div class="max-w-6xl mx-auto px-4 flex justify-between items-center h-16">
    <!-- Logo -->
    <div>
      <%= link_to root_path, class: "text-blue-600 text-2xl font-bold hover:text-blue-700 transition-colors" do %>
        DailyCode
      <% end %>
    </div>
    
    <!-- Navigation buttons -->
    <div class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <span class="text-gray-700">
          <%= current_user.email %>
        </span>
        <%= link_to "アカウント設定", edit_user_registration_path,
            class: "text-gray-700 hover:text-gray-900 px-4 py-2 rounded transition-colors" %>
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete,
            class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded shadow transition-colors border-0" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path,
            class: "text-gray-700 hover:text-gray-900 px-4 py-2 rounded transition-colors" %>
        <%= link_to "新規登録", new_user_registration_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded shadow transition-colors" %>
      <% end %>
    </div>
  </div>
</header> 